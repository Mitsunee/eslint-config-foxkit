{
  "name": "eslint-config-foxkit",
  "version": "3.0.0-next",
  "description": "ESlint 9 compatible Configurations",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./typescript": "./ts.js"
  },
  "repository": "Mitsunee/eslint-config-foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "format": "prettier -w .",
    "lint": "eslint .",
    "prepublish": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "publish": "pnpm prepublish && clean-publish"
  },
  "nano-staged": {
    "**/*.{js,json,md}": [
      "prettier -w"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  },
  "files": [
    "rules",
    "index.js"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "dist",
    "packageManager": "pnpm",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged",
      "simple-git-hooks"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@eslint/js": "^8.40.0",
    "globals": "^13.20.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "clean-publish": "^4.2.0",
    "eslint": "^8.40.0",
    "eslint-plugin-no-await-in-promise": "^1.1.3",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5.59.0",
    "@typescript-eslint/parser": ">=5.59.0",
    "eslint": ">=8.39.0",
    "eslint-plugin-no-await-in-promise": ">=1.1.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16"
  }
}
