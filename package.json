{
  "name": "eslint-config-foxkit",
  "version": "3.0.0-next",
  "description": "ESlint 9 compatible Configurations",
  "type": "commonjs",
  "main": "configs/index.js",
  "module": "configs/index.js",
  "exports": {
    ".": "./configs/index.js",
    "./typescript": "./configs/ts.js",
    "./react": "./configs/react.js"
  },
  "repository": "Mitsunee/eslint-config-foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "format": "prettier -w .",
    "lint": "eslint .",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "node build.mjs && clear-package-json package.json -o dist/package.json"
  },
  "nano-staged": {
    "**/*.{js,json,md}": [
      "prettier -w"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  },
  "files": [
    "react.*",
    "ts.*",
    "index.*"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "dist",
    "packageManager": "pnpm",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged",
      "simple-git-hooks"
    ]
  },
  "publishConfig": {
    "access": "public",
    "main": "index.cjs",
    "module": "index.js",
    "exports": {
      ".": {
        "require": "./index.cjs",
        "import": "./index.js"
      },
      "./typescript": {
        "require": "./ts.cjs",
        "import": "./ts.js"
      },
      "./react": {
        "require": "./react.cjs",
        "import": "./react.js"
      }
    }
  },
  "dependencies": {
    "@eslint/js": "^8.42.0",
    "globals": "^13.20.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "clean-publish": "^4.2.0",
    "esbuild": "^0.18.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-await-in-promise": "^1.1.3",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5.59.0",
    "@typescript-eslint/parser": ">=5.59.0",
    "eslint": ">=8.39.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-await-in-promise": ">=1.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16"
  }
}
